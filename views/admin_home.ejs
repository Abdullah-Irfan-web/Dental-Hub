    <div class="container my-5">
        <h2 class="mb-4 text-center">Admin Orders</h2>
      
        <!-- Search Bar -->
        <form class="form-inline mb-4 d-flex justify-content-center" method="GET" action="/admin">
          <input type="text" name="search" class="form-control mr-2" placeholder="Search by Email or Order ID" value="<%= search %>">
          <button type="submit" class="btn btn-primary">Search</button>
        </form>
      
        <% if (orders.length === 0) { %>
          <div class="alert alert-info text-center">
            No orders found.
          </div>
        <% } else { %>
          <% orders.forEach(order => { %>
            <div class="card mb-4 shadow-sm">
              <!-- Card Header -->
              <div class="card-header d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center">
                <span>
                  <strong>Order ID:</strong> <%= order._id %><br>
                  <strong>Name:</strong> <%=order.address.name%> <br>
                  <strong>Contact:</strong> <%=order.address.contactNumber%> <br>
                  <strong>Email:</strong> <%= order.userEmail %><br>
                  <strong>Address:</strong> <%= order.address.fullAddress %>, <%= order.address.city %>, <%= order.address.pincode %><br>
                  <strong>Payment Status: </strong><%= order.paystatus %><br>
                  <% if (order.extrainfo) { %>
                    <strong>Extra Info:</strong> <%= order.extrainfo %><br>
                  <% } %>
                </span>
      
                <div>
                  <form method="POST" action="/admin/order/status/<%= order._id %>" class="d-inline">
                    <select name="status" class="form-control d-inline w-auto" onchange="this.form.submit()">
                      <option value="Pending" <%= order.status === 'Confirmed' ? 'selected' : '' %>>Confirmed</option>
                      <option value="Shipped" <%= order.status === 'Shipped' ? 'selected' : '' %>>Shipped</option>
                      <option value="Delivered" <%= order.status === 'Delivered' ? 'selected' : '' %>>Delivered</option>
                      <!-- <option value="Cancelled" <%= order.status === 'Cancelled' ? 'selected' : '' %>>Cancelled</option> -->
                    </select>
                  </form>
      
                  <a href="/admin/order/delete/<%= order._id %>" class="btn btn-danger btn-sm ml-2"
                    onclick="return confirm('Are you sure you want to delete this order?')">Delete</a>
                    <div class="mt-2">
                      <a href="/admin/order/receipt/<%= order._id %>" 
                        target="_blank" 
                        class="btn btn-sm btn-primary">
                        Generate Receipt
                     </a>
                    </div>
                </div>
              </div>
      
              <!-- Order Items Table -->
              <div class="card-body p-0">
                <div class="table-responsive">
                  <table class="table table-bordered mb-0">
                    <thead class="thead-dark">
                      <tr>
                        <th>Image</th>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Qty</th>
                        <th>Subtotal</th>
                       
                      </tr>
                    </thead>
                    <tbody>
                      <% order.items.forEach(item => { %>
                        <tr>
                          <td class="text-center">
                            <% if (item.product) { %>
                              <img src="<%= item.product.img %>" 
                                   alt="<%= item.product.productName %>" 
                                   width="60" class="rounded">
                            <% } else { %>
                              <span class="text-muted">Image N/A</span>
                            <% } %>
                          </td>
                    
                          <td>
                            <% if (item.product) { %>
                              <%= item.product.productName %>
                            <% } else { %>
                              <span class="text-danger">Product Deleted</span>
                            <% } %>
                          </td>
                    
                          <td>
                            <% if (item.product) { %>
                              ₹<%= item.product.price %>
                            <% } else { %>
                              N/A
                            <% } %>
                          </td>
                    
                          <td><%= item.quantity %></td>
                    
                          <td>
                            <% if (item.product) { %>
                              ₹<%= item.quantity * item.product.price %>
                            <% } else { %>
                              N/A
                            <% } %>
                          </td>
                         
                        </tr>
                      <% }) %>
                    </tbody>
                    
                  </table>
                </div>
              </div>
      
              <div class="card-footer text-right">
                <strong class="text-muted">Total : <%=order.total%></strong> <br>
                <small class="text-muted">Placed on <%= order.createdAt.toDateString() %></small>
                
              </div>
            </div>
          <% }) %>
        <% } %>
      
        <!-- Pagination -->
        <nav aria-label="Orders pagination">
          <ul class="pagination justify-content-center">
            <% if (currentPage > 1) { %>
              <li class="page-item"><a class="page-link" href="/admin?page=<%= currentPage - 1 %>&search=<%= search %>">Prev</a></li>
            <% } %>
            
            <% for(let i = 1; i <= totalPages; i++) { %>
              <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                <a class="page-link" href="/admin?page=<%= i %>&search=<%= search %>"><%= i %></a>
              </li>
            <% } %>
            
            <% if (currentPage < totalPages) { %>
              <li class="page-item"><a class="page-link" href="/admin/?page=<%= currentPage + 1 %>&search=<%= search %>">Next</a></li>
            <% } %>
          </ul>
        </nav>
      </div>
      


    
